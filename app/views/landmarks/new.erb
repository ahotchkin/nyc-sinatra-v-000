<h2>Create New Landmark</h2>
<form action="/landmarks" method="POST">
  <label for="landmark_name">Name:</label>
  <input type="text" id="landmark_name" name="landmark[name]">
  <label for="landmark_year_completed">Year:</label>
  <input type="text" id="landmark_year_completed" name="landmark[year_completed]">
  <br><br>
  <h3><label>Figures</label></h3>
  <% @figures.each do |figure| %>
    <input type="checkbox" id="figure_<%= figure.id %>" name="landmark[figure_ids][]" value="<%= figure.id %>"><%= figure.name %></input>
    <br>
  <% end %>
  <br>
  <h3><label>Create New Figure:</label></h3>
  <label for="new_figure">Name:</label>
  <input type="text" id="new_figure" name="figure[name]">
  <br><br>
  <button type="submit" value="create new figure">Create New Landmark</button>
</form>
