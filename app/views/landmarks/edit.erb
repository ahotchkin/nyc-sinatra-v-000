<h2>Edit information for <%= @landmark.name %></h2>
<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <label for="name">Name:</label>
  <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>">
  <label for="year_completed">Year:</label>
  <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">
  <br><br>
  <h3><label>Figures</label></h3>
  <% @figures.each do |figure| %>
    <input type="checkbox" id="figure_<%= figure.id %>" name="landmark[figure_id]" value="<%= figure.id %>" <%= 'checked' if @landmark.figure == figure %>><%= figure.name %></input>
    <br>
  <% end %>
  <br>
  <h3><label>Create New Figure:</label></h3>
  <label for="new_figure">Name:</label>
  <input type="text" id="new_figure" name="figure[name]">
  <br><br>
  <button type="submit" value="edit_landmark">Edit Landmark</button>
</form>
